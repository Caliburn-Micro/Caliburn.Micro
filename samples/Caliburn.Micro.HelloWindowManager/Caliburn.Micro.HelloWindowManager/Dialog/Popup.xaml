<UserControl x:Class="Caliburn.Micro.HelloWindowManager.Dialog.Popup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:cal="http://www.caliburnproject.org"
             Height="240">
	<Border CornerRadius="6"
	        BorderBrush="Black"
	        BorderThickness="1"
	        Background="White"
	        Padding="4"
	        Margin="6">
		<Border.Effect>
			<DropShadowEffect Opacity=".5" />
		</Border.Effect>
		<StackPanel>
			<TextBlock FontSize="20">
				This is a custom POPUP view.
			</TextBlock>

			<ItemsControl Name="Buttons">
				<ItemsControl.ItemTemplate>
					<DataTemplate>
						<Button Margin="10"
								Content="{Binding}"
								cal:Message.Attach="SomeActionWithParameter($dataContext)"></Button>
					</DataTemplate>
				</ItemsControl.ItemTemplate>
			</ItemsControl>


			<Button x:Name="TryClose"
			        Content="Close" />
		</StackPanel>
	</Border>
</UserControl>