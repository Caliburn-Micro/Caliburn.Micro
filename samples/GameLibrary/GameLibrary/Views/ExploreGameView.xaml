<UserControl x:Class="GameLibrary.Views.ExploreGameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel>
        <ContentControl x:Name="Game" 
                        HorizontalContentAlignment="Stretch"/>

        <Border x:Name="IsCheckedOut"
                Margin="0 42 0 0">
            <StackPanel>
                <TextBlock x:Name="BorrowedMessage"/>
                <Button x:Name="CheckIn"
                        Content="Check In"
                        Margin="0 12 0 0"
                        HorizontalAlignment="Right" />
            </StackPanel>
        </Border>

        <Border x:Name="IsCheckedIn">
            <StackPanel>
                <TextBlock Text="Borrower:"
                           Style="{StaticResource label}" />
                <TextBox x:Name="Borrower">
                    <TextBox.CaretBrush>
                        <SolidColorBrush Color="Gray" />
                    </TextBox.CaretBrush>
                </TextBox>
                
                <Button x:Name="CheckOut"
                        Content="Check Out"
                        Margin="0 12 0 0"
                        HorizontalAlignment="Right" />
            </StackPanel>
        </Border>
        
    </StackPanel>
</UserControl>